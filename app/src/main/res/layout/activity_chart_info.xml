<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.itianyi.fragment.FindFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/relativeLayout"
            android:background="@drawable/topbg"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="人员信息"
                android:textColor="@color/title_font"
                android:id="@+id/tv_title"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:id="@+id/iv_back"
                android:background="@drawable/imgsel"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/header_arrow" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:layout_below="@+id/relativeLayout">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:text="序号"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/xh"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="match_parent"
                    android:text="姓名"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/xm"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="性别"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/xb"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="民族"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/mz"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="籍贯"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/jg"/>
                <LinearLayout
                    android:id="@+id/ll_csrq"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/tv_background">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="出生日期"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/csrq"
                        android:layout_weight="1" />
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="11dp"
                        android:layout_height="22dp"
                        android:src="@drawable/meixu"
                        android:id="@+id/iv_csrq"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cjgzsj"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/tv_background">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="参加工作时间"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/cjgzsj" />
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="11dp"
                        android:layout_height="22dp"
                        android:src="@drawable/meixu"
                        android:id="@+id/iv_cjgzsj"
                        android:scaleType="fitXY" />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="match_parent"
                    android:text="学历"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/xl" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="match_parent"
                    android:text="职级"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/xzj" />
                <LinearLayout
                    android:id="@+id/ll_rxzjsj"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/tv_background">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="任现职级时间"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:id="@+id/rxzjsj" />
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="11dp"
                        android:layout_height="22dp"
                        android:src="@drawable/meixu"
                        android:id="@+id/iv_rxzjsj"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="单位"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/dw" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="所在部门"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/szbm" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="match_parent"
                    android:text="职务"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/xzw" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="match_parent"
                    android:text="警衔"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/xjx" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:text=" "
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/tv_background"
                    android:id="@+id/zwlb" />


        </LinearLayout>
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:listSelector="@drawable/listsel"
            android:layout_below="@+id/ll_title" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_noRecord"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="没有搜索到数据"
            android:gravity="center"
            android:layout_below="@+id/ll_title" />

    </LinearLayout>
</FrameLayout>