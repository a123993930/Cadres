<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anniubg"
    tools:context="com.itianyi.office.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView3"
        android:src="@drawable/polic"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayout5"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:layout_alignLeft="@+id/btn_login"
        android:layout_alignStart="@+id/btn_login"
        android:layout_alignRight="@+id/btn_login"
        android:layout_alignEnd="@+id/btn_login">

        <LinearLayout
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="44dp">

            <ImageView
                android:layout_margin="4dp"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/denglu1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:hint="用户名"
                android:ems="20"
                android:maxLines="20"
                android:background="@android:color/white"
                android:id="@+id/et_name"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="44dp">

            <ImageView
                android:layout_margin="4dp"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:src="@drawable/denglu2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:hint="密  码"
                android:ems="20"
                android:maxLines="20"
                android:background="@android:color/white"
                android:id="@+id/et_password"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:text="登　录"
        android:background="@drawable/btnsel"
        android:textColor="@color/button_font"
        android:id="@+id/btn_login"
        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
